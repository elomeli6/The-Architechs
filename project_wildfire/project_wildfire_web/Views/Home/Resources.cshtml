@{
    ViewData["Title"] = "Resources";
}

<div class="resources-page">
    <h2 class="text-center display-4">Welcome to our Resource page</h2>
    <p class="text-center">Here you will find useful links and information about fire safety, food pantries, and evacuation routes in case of a wildfire emergency.</p>

    <div class="accordion mx-auto" id="resourceAccordion" style="max-width: 800px;">
        <!-- Food Pantries -->
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#foodPantries">
                    Food Pantry
                </button>
            </h2>
            <div id="foodPantries" class="accordion-collapse collapse" data-bs-parent="#resourceAccordion">
                <div class="accordion-body">
                    <ul>
                        <h5 class ="text-center">In the event of wildfire that results in the loss of access to food we aim to provide a way to help you locate
                            the nearest food pantry. Using the link below you will be directed to Feeding America website, which is the largest charity 
                            "working to end hunger in the United States. We partner with food banks, food pantries, and local food programs to bring food
                            to people facing hunger. We advocate for policies that create long-term solutions to hunger."
                        </h5>
                        <h5 class="text-center"><a href="https://www.feedingamerica.org/find-your-local-foodbank" target="_blank">Feeding America</a></h5>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Fire Safety -->
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#fireSafety">
                    Fire Safety
                </button>
            </h2>
            <div id="fireSafety" class="accordion-collapse collapse" data-bs-parent="#resourceAccordion">
                <div class="accordion-body">
                    <p>Here are some fire safety tips:</p>
                    <ul>
                        <li>Have an evacuation plan.</li>
                        <li>Check your smoke detectors regularly.</li>
                        <li><a href="https://example.com">Fire Safety Resources</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Evacuation Routes -->
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#evacRoutes">
                    Evacuation Routes
                </button>
            </h2>
            <div id="evacRoutes" class="accordion-collapse collapse" data-bs-parent="#resourceAccordion">
                <div class="accordion-body">
                    <p>Find your nearest evacuation route here:</p>
                    <ul>
                        <li><a href="https://example.com">Statewide Evacuation Maps</a></li>
                        <li><a href="https://example.com">Local Emergency Shelters</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>